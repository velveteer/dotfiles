[user]
    name = Josh Miller
    email = notjoshmiller@gmail.com
[core]
    editor = nvim
    excludesfile = ~/.gitexcludes
[color]
    ui = true
[push]
    default = simple
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    keepbackup = false
[include]
    path = ~/.gitconfig_local
[rerere]
    enabled = true
[credential]
    helper = cache --timeout 36000000
